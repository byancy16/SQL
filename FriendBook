--create a database for a friend networking site, with a table storing data on each person, a table on each person's hobbies, and a table of friend connections between the people

CREATE TABLE persons (
    person_id INT,
    fullname TEXT,
    age INTEGER)
    
INSERT INTO persons VALUES 
(1, 'Bobby McBobbyFace', '12'),
(2, 'Lucy BoBucie', '25'),
(3, 'Banana FoFanna', '14'),
(4, 'Shish Kabob', '20'),
(5, 'Fluffy Sparkles', '8')


CREATE table hobbies (
    person_id INTEGER,
    name TEXT)
    
INSERT INTO hobbies VALUES
(1, 'drawing'),
(1, 'coding'),
(2, 'dancing'),
(2, 'coding'),
(3, 'skating'),
(3, 'rowing'),
(3, 'drawing'),
(4, 'coding'),
(4, 'dilly-dallying'),
(4, 'meowing')

CREATE table friends (
    person1_id INTEGER,
    person2_id INTEGER);

INSERT INTO friends VALUES
(1, 4),
(2, 3)
    
--display table showing people's names with their hobbies
SELECT fullname, name FROM persons
 JOIN hobbies
 ON persons.id = hobbies.person_id;
 
 --display the names of each pair of friends, based on the data in the friend's table
 SELECT p1.fullname , p2.fullname
FROM friends JOIN persons as p1
on p1.id = friends.person1_id
JOIN persons as p2
on p2.id = friends.person2_id;
